		<copy file="${dist.dir}\MagicSpellsFactions-${factions.version}-${version.suffix}.jar" tofile="${dist.dir}\MagicSpellsFactions.jar"/>
		<copy file="${dist.dir}\MagicSpellsFactions.jar" todir="${serv.dir}"/>
	</target>
        
        <!-- Compile dev addon -->
	<target name="dev-compile" depends="core-jar">
		<mkdir dir="${dev.build.dir}"/>
		<javac srcdir="${dev.src.dir}" destdir="${dev.build.dir}" debug="true" source="1.8" target="1.8">
			<classpath>
